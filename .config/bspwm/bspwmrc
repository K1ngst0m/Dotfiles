#!/bin/bash

focused=$(xrdb ~/.config/X11/Xresources -query all | grep color7 | cut -f2)
normal=$(xrdb ~/.config/X11/Xresources -query all | grep color8 | cut -f2)

picom &
fcitx5 &
nitrogen --restore &
# wal -R
dunst &
bash $HOME/.config/polybar/launch.sh &

# bspc config focused_border_color    "$focused"
# bspc config normal_border_color     "$normal"
bspc config border_width            3
bspc config window_gap              15
bspc config top_padding             34
bspc config split_ratio             0.52

bspc config focus_follows_pointer   false
bspc config borderless_monocle      true
bspc config gapless_monocle         false
bspc config single_monocle          true

bspc rule -a Firefox        desktop='^2' follow=on
bspc rule -a discord        desktop='^4'
bspc rule -a mpv            desktop='^5' state=fullscreen follow=on
bspc rule -a feh            state=floating follow=on
bspc rule -a Tilda          state=floating floating=on focus=on sticky=on
bspc rule -a Demo          state=floating floating=on focus=on sticky=on

bspc monitor DisplayPort-0 -d TERM WEB CODE FILE
bspc monitor HDMI-A-0 -d TERM WEB CODE FILE

# repoly
wmname LG3D
